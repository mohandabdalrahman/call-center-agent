{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "plugins": [
      { "name": "tslint-language-service"}
    ],
    "paths": {
      "@shared/*": ["app/shared/*"],
      "@helpers/*": ["app/helpers/*"],
      "@services/*": ["app/services/*"],
      "@models/*": ["app/models/*"],
      "@theme/*": ["app/@theme/*"],
      "@environments/*": ["environments/*"],
    }
  }
}
